{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
      "includePattern": ".+\\.(js(doc)?|es6)$",
      "excludePattern": "(^|\\/|\\\\)_"
    },
    "opts": {
        "destination": "./doc/gen"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "outputSourceFiles": true
        },
        "path": "ink-docstrap",
        "theme": "cerulean",
        "navType": "vertical",
        "linenums": true,
        "dateFormat": "MMMM Do YYYY, h:mm:ss a"
    }
}
